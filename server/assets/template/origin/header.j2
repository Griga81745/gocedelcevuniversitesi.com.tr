{% load static %}
{% load custom_tags %}
<header class="header-area">
    <div class="top-header">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 col-sm-6">
                    <ul class="header-left-content">
                        <li>
                            <a href="tel:{% setting 'support_phone' %}">
                                <i class="ri-phone-fill"></i>
                                {% setting 'support_phone' %}
                            </a>
                        </li>
                        <li>
                            <a href="mailto:{% setting 'support_email' %}">
                                <i class="ri-mail-line"></i>
                                {% setting 'support_email' %}
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="navbar-area">
        <div class="mobile-responsive-nav">
            <div class="container">
                <div class="mobile-responsive-menu">
                    <div class="logo">
                        <a href="index-2.html">
                            <img src="{% static '' %}images/logo.png" alt="logo">
                        </a>
                    </div>
                    <div class="others-options-for-mobile-devices">
                        <ul>
                            <li>
                                <a href="{% url 'university:request-create' %}" class="default-btn">KAYIT OL</a>
                            </li>
                            <li>
                                <button type="button"
                                        class="search-btn"
                                        data-bs-toggle="modal"
                                        data-bs-target="#exampleModalsrc">
                                    <i class="ri-search-line"></i>
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="desktop-nav">
            <div class="container">
                <nav class="navbar navbar-expand-md navbar-light">
                    <a class="navbar-brand" href="index-2.html">
                        <img src="{% static '' %}images/logo.png" alt="logo">
                    </a>
                    <div class="collapse navbar-collapse mean-menu"
                            id="navbarSupportedContent">
                        <ul class="navbar-nav m-auto">
                            <li class="nav-item">
                                <a href="{% url 'university:home' %}" class="nav-link active">
                                    Ana Sayfa
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{% url 'university:area-list' %}" class="nav-link">
                                    Fiyat Listesi
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{% url 'university:faculty-list' %}" class="nav-link">
                                    Fakülteler
                                    <i class="ri-arrow-down-s-line"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    {% faculties as faculty_list %}
                                    {% for faculty in faculty_list %}
                                        <li class="nav-item">
                                            <a href="{{ faculty.get_absolute_url }}" class="nav-link">{{ faculty.title }}</a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a href="{% url 'university:faq-list' %}" class="nav-link">
                                    SSS
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{% url 'university:post-list' %}" class="nav-link">
                                    Blog
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{% url 'university:about-us' %}" class="nav-link">
                                    Üniversitemiz
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="{% url 'university:contact-us' %}" class="nav-link">
                                    İletişim
                                </a>
                            </li>
                        </ul>
                        <div class="others-options">
                            <ul>
                                <li>
                                    <a href="{% url 'university:request-create' %}" class="default-btn">
                                        ONLINE KAYIT OL
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
</header>
<div class="modal fade search-modal-area" id="exampleModalsrc">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <button type="button" data-bs-dismiss="modal" class="closer-btn">
                <i class="ri-close-line"></i>
            </button>
            <div class="modal-body">
                <form class="search-box">
                    <div class="search-input">
                        <input type="text"
                                name="Search"
                                placeholder="Search for..."
                                class="form-control">
                        <button type="submit" class="search-btn">
                            <i class="ri-search-line"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>