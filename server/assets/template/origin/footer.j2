{% load static %}
{% load custom_tags %}
<footer class="footer-area black-bg-color py-3">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-3 col-sm-12">
                <div class="single-footer-widget bg-f9f5f1">
                    <a href="{% url 'university:home' %}" class="logo">
                        <img style="height:100px" src="{% setting 'logo' as logo_url %}{{logo_url.url}}" alt="Image">
                    </a>
                    <p>
                        {% setting 'description' %}
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-sm-12">
            </div>
            <div class="col-lg-2 col-sm-6">
                <div class="single-footer-widget">
                    <h3>
                        Sayfalar
                    </h3>
                    <ul class="import-link">
                        <li>
                            <a href="{% url 'university:home' %}">Ana Sayfa</a>
                        </li>
                        <li>
                            <a href="{% url 'university:area-list' %}">Fiyat Listesi</a>
                        </li>
                        <li>
                            <a href="{% url 'university:page-kayit-evraklari' %}">Kayıt Evrakları</a>
                        </li>
                        <li>
                            <a href="{% url 'university:post-list' %}">Blog</a>
                        </li>
                        <li>
                            <a href="{% url 'university:contact-us' %}">İletişim</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-2 col-sm-6">
                <div class="single-footer-widget">
                    <h3>
                        7/24 Destek
                    </h3>
                    <ul class="address">
                        <li>
                            <i class="ri-mail-line"></i>
                            <span>E-Posta</span>
                            <a href="mailto:{% setting 'support_email' %}">{% setting 'support_email' %}</a>
                        </li>
                        <li>
                            <i class="ri-phone-line"></i>
                            <span>Telefon</span>
                            <a href="tel:{% setting 'support_phone' %}">{% setting 'support_phone' %}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
<div class="copy-right-area">
    <div class="container">
        <p>
            Copyright <i class="ri-copyright-line"></i> 2022 MaaC
        </p>
    </div>
</div>
<div class="go-top">
    <i class="ri-arrow-up-s-fill"></i>
    <i class="ri-arrow-up-s-fill"></i>
</div>