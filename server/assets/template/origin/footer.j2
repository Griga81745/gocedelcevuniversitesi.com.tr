{% load static %}
{% load custom_tags %}
<footer class="footer-area black-bg-color">
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-lg-3 col-sm-6">
                <div class="single-footer-widget bg-f9f5f1">
                    <a href="index-2.html" class="logo">
                        <img src="{% static '' %}images/white-logo.png" alt="Image">
                    </a>
                    <p>
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Vero voluptas animi, minima velit
                        corrupti fugit! Tenetur animi suscipit, reiciendis ad consectetur fugit
                    </p>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="single-footer-widget">
                    <h3>
                        Sayfalar
                    </h3>
                    <ul class="import-link">
                        <li>
                            <a href="{% url 'university:home' %}">Ana Sayfa</a>
                        </li>
                        <li>
                            <a href="{% url 'university:area-list' %}">Fiyat Listesi</a>
                        </li>
                        <li>
                            <a href="{% url 'university:faculty-list' %}">Fakülteler</a>
                        </li>
                        <li>
                            <a href="{% url 'university:faq-list' %}">SSS</a>
                        </li>
                        <li>
                            <a href="{% url 'university:post-list' %}">Blog</a>
                        </li>
                        <li>
                            <a href="{% url 'university:about-us' %}">Üniversitemiz</a>
                        </li>
                        <li>
                            <a href="{% url 'university:contact-us' %}">İletişim</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="single-footer-widget">
                    <h3>
                        Fakülteler
                    </h3>
                    <ul class="import-link">
                        {% faculties as faculty_list %}
                        {% for faculty in faculty_list %}
                            <li>
                                <a href="{{ faculty.get_absolute_url }}" class="nav-link">{{ faculty.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <div class="single-footer-widget">
                    <h3>
                        7/24 Destek
                    </h3>
                    <ul class="address">
                        <li>
                            <i class="ri-mail-line"></i>
                            <span>E-Posta</span>
                            <a href="mailto:{% setting 'support_email' %}">{% setting 'support_email' %}</a>
                        </li>
                        <li>
                            <i class="ri-phone-line"></i>
                            <span>Telefon</span>
                            <a href="tel:{% setting 'support_phone' %}">{% setting 'support_phone' %}</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</footer>
<div class="copy-right-area">
    <div class="container">
        <p>
            Copyright <i class="ri-copyright-line"></i> 2021 Unco. Design & Developed By
            <a href="https://envytheme.com/" target="_blank">EnvyTheme</a>
        </p>
    </div>
</div>
<div class="go-top">
    <i class="ri-arrow-up-s-fill"></i>
    <i class="ri-arrow-up-s-fill"></i>
</div>