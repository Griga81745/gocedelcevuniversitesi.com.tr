{% extends "origin/base.j2" %}
{% load static %}
{% load custom_tags %}
{% block title %}
    Haber
{% endblock title %}
{% block content %}
    <!-- Start Page Title Area -->
	<div class="page-title-area bg-23">
		<div class="container">
			<div class="page-title-content">
				<h2>{{ object.title }}</h2>

				<ul>
					<li>
						<a href="{% url 'university:home' %}">
                            Ana Sayfa
                        </a>
					</li>

					<li class="active">{{ object.title }}</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- End Page Title Area -->

	<!-- Start Blog Details Area -->
	<section class="blog-details-area ptb-100">
		<div class="container">
			<div class="row">
				<div class="col-lg-8">
					<div class="blog-details-content mr-15">
						<div class="blog-details-img">
							<img src="{{ object.image.url }}" alt="Image">
						</div>

						<div class="blog-top-content">
							<div class="blog-content">

								<h3>{{ object.title }}</h3>
								{{ object.content|markdown }}

								<div class="gap-mb-20"></div>
							</div>

						</div>

					</div>
				</div>

				<div class="col-lg-4">
					<div class="widget-sidebar ml-15">
						{% include 'university/template_parts/sidebar-widget-search.j2' %}
                        {% include 'university/template_parts/sidebar-widget-latest-posts.j2' %}
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- End Blog Details Area -->
{% endblock content %}