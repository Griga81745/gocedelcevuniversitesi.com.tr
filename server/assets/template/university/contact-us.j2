{% extends "origin/base.j2" %}

{% load custom_tags %}

{% block title %}İletişim{% endblock title %}

{% block content %}
    <!-- Start Page Title Area -->
    <div class="page-title-area bg-26">
        <div class="container">
            <div class="page-title-content">
                <h2>İletişim</h2>

                <ul>
                    <li>
                        <a href="{% url 'university:home' %}">
                            Ana Sayfa
                        </a>
                    </li>

                    <li class="active">İletişim</li>
                </ul>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <!-- Start Contact Info Area -->
    <section class="contact-info-area ptb-100">
        <div class="container">
            <div class="row">

                <div class="col-lg-12">
                    <div class="contact-info">
                        <h2>Bizimle İletişime Geçin</h2>

                        <ul class="address">
                            <li>
                                <i class="ri-mail-line"></i>
                                <span>Email</span>
                                <a href="mailto:{% setting 'support_email' %}">{% setting 'support_email' %}</a>
                            </li>
                            <li>
                                <i class="ri-phone-fill"></i>
                                <span>Phone</span>
                                <a href="tel:{% setting 'support_phone' %}">{% setting 'support_phone' %}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact Info Area -->

{% endblock content %}