{% extends "origin/base.j2" %}
{% load static %}
{% block title %}
    Kayıt Ol
{% endblock title %}
{% block content %}
    <!-- Start Page Title Area -->
	<div class="page-title-area bg-26">
		<div class="container">
			<div class="page-title-content">
				<h2>Contact</h2>

				<ul>
					<li>
						<a href="{% url 'university:home' %}">
                            Ana Sayfa
                        </a>
					</li>

					<li class="active">Contact</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- End Page Title Area -->

	<!-- Start Contact Area -->
	<section class="contact-area pb-100">
		<div class="container my-5">
			<div class="section-title">
				<h2>Online Başvuru Oluşturun</h2>
				<p>Personelimiz size geri dönüş yapsın...</p>
			</div>

			<form method="POST">
				{% csrf_token %}
				<div class="row">
					{% for field in form %}
						{% if field.widget_type == "textarea" %}
							<div class="col-lg-12 col-sm-6 mb-3">
								<div class="form-group">
									<label>{{ field.label }}</label>
									{{ field }}
									<div class="help-block with-errors"></div>
								</div>
							</div>
						{% else %}
							<div class="col-lg-6 col-sm-6 mb-3">
								<div class="form-group">
									<label>{{ field.label }}</label>
									{{ field }}
									<div class="help-block with-errors"></div>
								</div>
							</div>
						{% endif %}
					{% endfor %}
					<div class="col-lg-12 col-md-12">
						<button type="submit" class="default-btn">
							<span>Başvuru Oluştur</span>
						</button>
						<div id="msgSubmit" class="h3 text-center hidden"></div>
						<div class="clearfix"></div>
					</div>
				</div>
			</form>
		</div>
	</section>
	<!-- End Contact Area -->
{% endblock content %}